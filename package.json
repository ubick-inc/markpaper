{
  "name": "markpaper",
  "version": "0.1.1",
  "description": "Beautiful Markdown to PDF converter with automatic page breaks, Mermaid support, and Japanese font handling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "markpaper": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubick-inc/markpaper.git"
  },
  "homepage": "https://github.com/ubick-inc/markpaper#readme",
  "bugs": {
    "url": "https://github.com/ubick-inc/markpaper/issues"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:e2e": "npm run build && jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && git push origin main --follow-tags",
    "release:minor": "npm run version:minor && git push origin main --follow-tags",
    "release:major": "npm run version:major && git push origin main --follow-tags"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "vivliostyle",
    "mermaid",
    "typescript",
    "japanese",
    "cjk",
    "page-break",
    "cli"
  ],
  "author": "jshimazu",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.0.0",
    "@types/marked": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@vivliostyle/cli": "^8.0.0",
    "@vivliostyle/core": "^2.25.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "cosmiconfig": "^8.0.0",
    "fs-extra": "^11.0.0",
    "marked": "^9.0.0",
    "mermaid": "^10.0.0",
    "puppeteer": "^21.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
