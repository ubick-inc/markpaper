{
  "name": "markpaper",
  "version": "1.0.0",
  "description": "Beautiful Markdown to PDF converter",
  "main": "dist/index.js",
  "bin": {
    "markpaper": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:e2e": "npm run build && jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "vivliostyle",
    "mermaid",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.0.0",
    "@types/marked": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@vivliostyle/cli": "^8.0.0",
    "@vivliostyle/core": "^2.25.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "cosmiconfig": "^8.0.0",
    "fs-extra": "^11.0.0",
    "marked": "^9.0.0",
    "mermaid": "^10.0.0",
    "puppeteer": "^21.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
